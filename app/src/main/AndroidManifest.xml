<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ml.product.search">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MLProductSearchApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MLProductSearchExample">
        <activity
            android:name=".ui.view.activity.ProductDetailsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.view.activity.ProductSearchActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.view.activity.SiteSelectionActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.view.activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>